<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.but.java.controllers.PersonsController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <Button alignment="CENTER" fx:id="addPersonButton" layoutX="292.0" layoutY="319.0"
                        mnemonicParsing="false" text="Refresh" textFill="#131e9d"  onAction="#handleRefreshButton" />
                <Button alignment="CENTER" fx:id="refreshButton" layoutX="281.0" layoutY="353.0"
                        mnemonicParsing="false" text="Add person" textFill="#131e9d" onAction="#handleAddPersonButton" />
                <TableView fx:id="systemPersonsTableView" layoutX="23.0" layoutY="79.0" prefHeight="200.0"
                           prefWidth="593.0">
                    <columns>
                        <TableColumn fx:id="personsId" minWidth="75.0" prefWidth="80.00000303983688" text="id"/>
                        <TableColumn fx:id="personsGivenName" minWidth="75.0" prefWidth="120.0" text="given name"/>
                        <TableColumn fx:id="personsFamilyName" minWidth="75.0" prefWidth="120.0"
                                     text="family name"/>
                        <TableColumn fx:id="personsEmail" minWidth="75.0" prefWidth="160.00001525878906"
                                     text="email"/>
                        <TableColumn fx:id="personsAge" minWidth="75.0" prefWidth="120.0" text="age"/>
                    </columns>
                </TableView>
                <Label alignment="CENTER" layoutX="294.0" layoutY="27.0" text="People">
                    <font>
                        <Font size="22.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</VBox>
